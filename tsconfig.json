{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "global.d.ts", "@types"]
}
